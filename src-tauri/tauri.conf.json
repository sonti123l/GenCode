{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop-agent",
  "version": "0.1.0",
  "identifier": "com.bruceben.desktop-agent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
             "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Full capability for main window",
          "local": true,
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:webview:allow-create-webview-window",
            "dialog:default",
            "dialog:allow-open",
            "dialog:allow-save",
            "fs:default",
            "fs:allow-read",
            "fs:allow-write",
            "fs:allow-create",
            "fs:allow-remove",
            "fs:allow-rename",
            "fs:allow-mkdir",
            "fs:allow-exists",
            "fs:allow-copy",
            "fs:read-all",
            "fs:write-all",
            {
              "identifier": "fs:scope",
              "allow": ["**/*"]
            },
            "http:default",
            "http:allow-fetch",
            {
              "identifier": "http:scope",
              "allow": [{"url": "**"}]
            },
            "shell:default",
            "shell:allow-open",
            "notification:default",
            "notification:allow-send",
            "clipboard:default",
            "clipboard:allow-read-text",
            "clipboard:allow-write-text",
            "path:default",
            "store:default",
            "sql:default",
            "event:default",
            "window:default"
          ]
        },
        {
          "identifier": "graph-capability",
          "description": "Graph viewer windows",
          "local": true,
          "permissions": [
            "core:webview:allow-create-webview-window"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
